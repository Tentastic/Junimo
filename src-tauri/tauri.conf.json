{
  "build": {
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "productName": "junimo",
  "version": "1.0.0",
  "identifier": "Junimo",
  "plugins": {},
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "main",
        "title": "Junimo",
        "width": 1000,
        "height": 600,
        "maximized": true,
        "visible": false,
        "transparent": true,
        "minWidth": 1000,
        "minHeight": 650
      },
      {
        "width": 420,
        "height": 160,
        "decorations": false,
        "url": "splashscreen",
        "label": "splashscreen",
        "center": true,
        "transparent": true
      }
    ]
  }
}